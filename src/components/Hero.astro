---
/* HERO SECTION - ARUNA */
---

<section id="inicio" class="relative min-h-[90vh] flex items-center justify-center overflow-hidden">
  <!-- Background Video -->
  <div class="absolute inset-0">
    <video
      autoplay
      muted
      loop
      playsinline
      class="absolute inset-0 w-full h-full object-cover"
    >
      <source src="/hero-video.mp4" type="video/mp4" />
    </video>

    <!-- Overlay para legibilidad del texto -->
    <div class="absolute inset-0 bg-crema/50"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 text-center px-6 max-w-4xl mx-auto">
    <div class="stagger">
      <h1 class="fade-up text-4xl md:text-5xl lg:text-6xl text-stone mb-6 font-light">
        Un espacio para volver a ti
      </h1>

      <p class="fade-up text-lg md:text-xl text-stone-light font-light tracking-wide">
        Respira &mdash; Suelta &mdash; Hab√≠tate
      </p>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="fade-up absolute bottom-8 left-1/2 -translate-x-1/2 z-10">
    <a
      href="#sobre-aruna"
      class="block text-stone-light hover:text-caramelo animate-bounce"
      aria-label="Continuar"
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="1.5"
          d="M19 14l-7 7m0 0l-7-7m7 7V3"
        />
      </svg>
    </a>
  </div>
</section>
